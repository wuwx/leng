<%= div_for topic, :class => "widget" do %>
  <div class="widget-body">
    <div class="media">
      <a class="pull-left" href="#">
        <%= image_tag topic.user.gravatar_url, :size => "48x48" %>
      </a>
      <div class="media-body">
        <div class="content">
          <%= simple_format topic.content %>
        </div>
        <div class="created_at clearfix">
          <%= topic.user.name %> <%= time_ago_in_words topic.created_at %>
          <div class="pull-right">
            <%= link_to comments_path(:topic_id => topic), :class => "comments_count btn btn-small", "data-disable-with" => "载入中", :remote => true do %>
              评论 <%= topic.comments.size %>
            <% end %>
          </div>
        </div>
        <div class="comments"></div>
      </div>
    </div>
  </div>
<% end %>