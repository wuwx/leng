<%= div_for topic, :class => "widget" do %>
  <div class="row-fluid">
    <div class="span1">
      <%= image_tag topic.user.gravatar_url %>
    </div>
    <div class="span11">
      <div class="content"><%= topic.user.name %>: <%= topic.content %></div>
      <div class="created_at">
        <%= topic.created_at %>
        <div class="pull-right">
          <%= link_to "评论#{topic.comments.size}", comments_path(:topic_id => topic), :remote => true %>
          <%= link_to "喜欢#{topic.flowers.size}", flowers_path(:topic_id => topic), :method => :post, :remote => true %>
        </div>
      </div>
      <div class="comments"></div>
    </div>
  </div>
<% end %>