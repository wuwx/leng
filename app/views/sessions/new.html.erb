<div class="widget">
  <%= simple_form_for @session, :url => session_path, :html => {:class => "form-horizontal"} do |f| %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :remember_me %>
    
    <div class="form-actions">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  <% end %>
</div>